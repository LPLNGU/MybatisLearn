<?xml version="1.0" encoding="UTF8" ?><!DOCTYPE configuration        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-config.dtd"><!--核心配置文件--><configuration>    <properties resource="db.properties"/>    <environments default="development">        <environment id="development">            <transactionManager type="JDBC"/>            <dataSource type="POOLED">                <property name="driver" value="${driver}"/>                <property name="url"                          value="${url}"/>                <property name="userna  me" value="${username}"/>                <property name="password" value="${password}"/>            </dataSource>        </environment>    </environments>    <!--注册mapper，很重要-->    <mappers>        <mapper resource="com/mybatis/dao/UserMapper.xml"/>    </mappers></configuration>